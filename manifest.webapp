  "launch_path": "/index.html",
  "icons": {
    "16": "/img/icons/drift16x16.png",
    "48": "/img/icons/drift48x48.png",
    "60": "/img/icons/drift60x60.png",
    "128": "/img/icons/drift128x128.png",
    "512": "/img/icons/drift512x512.png"
  },
  "developer": {
    "name": "Olivier Bézie",
